{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":assignAndReview(pierceray)"],
  "labels": ["dependencies"],
  "schedule": ["before 3am"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch"]
    }
  ],
  "lockFileMaintenance": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "separateMinorPatch": true
}
